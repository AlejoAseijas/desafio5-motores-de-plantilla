<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <h1 class="text-center">Vista de productos</h1>
<div class="container p-2 text-center">
    <table class="table">
        <thead>
          <tr>
            <th scope="col" class="table-dark text-center">Nombre</th>
            <th scope="col" class="table-dark text-center">Precio</th>
            <th scope="col" class="table-dark text-center">Foto</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(function(product){ %>
          <tr>
            <td class="text-center"><%= product.title %></td>
            <td class="text-center"><%= product.price %></td>
            <td class="text-center"> <img src=<%= product.thumbnail %> style="width: 70px" /> </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
</div>
<div class="container text-center m-2">
  <button
    type="submit"
    class="btn btn-primary"
    onclick="window.location.href='/'"
  >
    Formulario
  </button>
</div>
</body>
</html>